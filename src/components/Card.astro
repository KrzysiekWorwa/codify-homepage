---
import { SERVICES } from "../content/services";
---

<div
    data-aos="fade-up"
    class="pt-5 md:pt-15 grid grid-cols-1 gap-7 lg:grid-cols-3 lg:gap-10 lg:px-15 justify-center"
>
    {
        SERVICES.items.map((service) => {
            const Icon = service.icon;

            return (
                <a
                    href={`${import.meta.env.BASE_URL}${service.href}`}
                    class="block"
                >
                    <div class="group relative overflow-hidden text-primary flex flex-col gap-7 bg-white p-5 md:px-10 md:py-10 lg:py-15 transition-all duration-300 hover:text-secondary group-active:text-seconda  hover:scale-[1.03] active:scale-[0.98] h-full shadow-lg rounded-lg">
                        <div
                            class="absolute inset-0 bg-cover bg-center opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-active:opacity-100"
                            style={`background-image: url('${service.bgImage.src}');`}
                        />

                        <div class="absolute inset-0 bg-black/60 opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-active:opacity-100" />

                        <div class="relative z-10 flex flex-col gap-5">
                            <div>
                                <Icon class="w-11 h-11 md:w-15 md:h-15 transition-colors duration-300" />
                            </div>

                            <h4 class="text-xl font-semibold">
                                {service.title}
                            </h4>

                            <div class="text-primary text-sm md:text-lg group-hover:text-secondary group-active:text-secondary">
                                <p>{service.description}</p>
                            </div>

                            <p class="text-sm text-primary-lighter group-hover:text-secondary group-active:text-secondary">
                                {SERVICES.cta}
                            </p>
                        </div>
                    </div>
                </a>
            );
        })
    }
</div>
