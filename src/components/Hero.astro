---
import { HERO } from "../content/hero";
---

<section id={HERO.id} class="relative mt-30 overflow-hidden">
    <!-- particles jako tło -->

    <!-- content -->
    <div
        class="relative mx-10 mb-10 h-[calc(100vh-120px-2.5rem)] md:h-[calc(100vh-120px-2.5rem)] flex items-center justify-center bg-[linear-gradient(180deg,rgba(38,40,52,1)_50%,rgba(0,0,0,1)_100%)] rounded-4xl"
    >
        <div id="particles-js" class="absolute inset-0 z-0"></div>
        <div>
            <h1
                class="text-9xl font-medium text-center leading-tight tracking-tight bg-gradient-to-b from-[#E7E7E7] to-[#4B4B4B] bg-clip-text text-transparent"
            >
                {HERO.h1}
            </h1>
            <h2
                class="mt-3 text-3xl text-center
         bg-gradient-to-r from-[#E7E7E7] to-[#4B4B4B]
         bg-clip-text text-transparent"
            >
                <span id="typed-subtitle">{HERO.h2}</span>
            </h2>
        </div>
    </div>
</section>

<script
    is:inline
    src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"
></script>
<script client:load>
    window.particlesJS?.("particles-js", {
        particles: {
            number: { value: 80, density: { enable: true, value_area: 800 } },
            color: { value: "#E7E7E7" },
            shape: { type: "circle" },
            opacity: { value: 0.25 },
            size: { value: 2 },
            move: { enable: true, speed: 0.4, out_mode: "out" },
            line_linked: {
                enable: true,
                distance: 160,
                color: "#E7E7E7",
                opacity: 0.15,
                width: 1,
            },
        },
        interactivity: {
            events: { onhover: { enable: true, mode: "repulse" } },
            modes: {
                repulse: {
                    distance: 150,
                    duration: 0.2,
                },
            },
        },
        retina_detect: true,
    });
</script>
<script is:inline src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
<script client:load>
    if (window.innerWidth < 768) return;

    new Typed("#typed-subtitle", {
        strings: [
            "nowoczesne strony WWW",
            "wizualizacje 3D",
            "wirtualne spacery 360°",
        ],
        typeSpeed: 40,
        backSpeed: 25,
        backDelay: 1600,
        loop: true,
        showCursor: true,
    });
</script>
