---
import ContentSubHeader from "./ContentSubHeader.astro";
import ContentHeader from "./ContentHeader.astro";
import { Picture } from "astro:assets";
import Button from "./Button.astro";
import image from "../assets/images/about.webp";
import { ABOUT } from "../content/about";
import ContentDescription from "./ContentDescription.astro";
---

<section id={ABOUT.id} class="bg-dark scroll-mt-15 md:scroll-mt-22.5">
    <div
        data-aos="fade-up"
        class="max-w-360 items-center justify-center m-auto py-10 md:py-30 px-5 lg:px-1"
    >
        <ContentHeader text={ABOUT.header} class="text-secondary" />
        <div
            class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-18 lg:px-15 items-center justify-center m-auto md:py-10"
        >
            <div>
                <ContentSubHeader
                    text={ABOUT.subHeader}
                    class="bg-linear-to-r from-gray-400 from-0% via-secondary via-50% to-gray-400 to-100% bg-clip-text text-transparent"
                />

                <ContentDescription
                    text={ABOUT.description}
                    class="text-secondary text-justify"
                />
                {
                    (
                        <div class="pt-11 pb-7 md:py-11 text-center">
                            <Button
                                text={ABOUT.button.label}
                                href={ABOUT.button.href}
                                variant="outlined"
                            />
                        </div>
                    )
                }
            </div>

            <div class="w-full h-full overflow-hidden rounded-lg">
                <Picture
                    src={image}
                    alt="about"
                    width={1920}
                    height={1080}
                    loading="lazy"
                    decoding="async"
                    class="w-full h-full object-cover"
                />
            </div>
        </div>
    </div>
</section>
