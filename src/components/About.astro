---
import ContentSubHeader from "./ContentSubHeader.astro";
import ContentHeader from "./ContentHeader.astro";
import { Picture } from "astro:assets";
import Button from "./Button.astro";
import image from "../assets/images/about.jpg";
import { ABOUT } from "../content/about";
---

<section id={ABOUT.id} class="scroll-mt-15 md:scroll-mt-22.5">
    <div
        class="max-w-360 items-center justify-center m-auto my-5 md:my-15 px-5 lg:px-0"
    >
        <ContentHeader text={ABOUT.header} />
        <div
            class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-18 lg:px-15 items-center justify-center"
        >
            <div>
                <ContentSubHeader text={ABOUT.subHeader} />

                <div
                    class="max-w-none text-justify leading-tight my-2 text-xl text-primary md:text-2xl"
                >
                    {ABOUT.description}
                </div>

                {
                    (
                        <div class="py-7 text-center">
                            <Button
                                text={ABOUT.button.label}
                                href={ABOUT.button.href}
                            />
                        </div>
                    )
                }
            </div>

            <div>
                <Picture
                    src={image}
                    alt="about"
                    width={720}
                    height={480}
                    sizes="(max-width: 1024px) 100vw, 50vw"
                    loading="lazy"
                    decoding="async"
                    class="object-cover justify-self-center w-full lg:h-auto"
                />
            </div>
        </div>
    </div>
</section>
