---
import Card from "./Card.astro";
import ContentDescription from "./ContentDescription.astro";
import ContentHeader from "./ContentHeader.astro";
import ContentSubHeader from "./ContentSubHeader.astro";
import { SERVICES } from "../content/services";
---

<section id={SERVICES.id} class="scroll-mt-15 md:scroll-mt-22.5">
    <div
        data-aos="fade-up"
        class="max-w-360 flex flex-col items-center justify-center m-auto py-10 md:py-30 px-5 lg:px-0"
    >
        <ContentHeader text={SERVICES.header} class="text-primary" />
        <ContentSubHeader
            text={SERVICES.subHeader}
            class="bg-linear-to-r from-dark from-0% via-gray-500 via-50% to-dark to-100% bg-clip-text text-transparent"
        />
        <ContentDescription
            text={SERVICES.description}
            class="text-center text-primary"
        />
        <Card />
    </div>
</section>
