---
import Logo from "../assets/icons/Codify-logo-ciemne.svg";
---

<div
    id="main-menu"
    class="fixed top-0 left-0 w-full md:h-[90px] md:bg-black/30 md:backdrop-blur-xl z-50 flex text-center h-[60px] bg-white backdrop-blur-0"
>
    <div
        class="w-full max-w-[1440px] mx-auto px-5 flex items-center justify-between gap-5"
    >
        <a
            href="#home"
            class="text-black md:text-white text-4xl md:text-5xl tracking-tighter hover:text-[#e27952] transform transition-transform hover:rotate-[44deg] transition-colors duration-500 ease "
        >
            <Logo width={60} height={60} fill="currentColor" />
        </a>

        <div class="md:flex md:gap-7 md:ml-5 md:items-center hidden">
            {
                (
                    <a
                        href="#home"
                        class="text-white text-xl hover:text-[#e27952] transition-colors duration-300 ease"
                    >
                        Home
                    </a>
                )
            }
        </div>
    </div>
</div>
