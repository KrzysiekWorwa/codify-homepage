---
import Logo from "../assets/icons/Codify-logo-ciemne.svg";
import Button from "./Button.astro";
---

<div
    id="main-menu"
    class="fixed top-0 left-0 w-full md:h-[90px] md:bg-black/30 md:backdrop-blur-xl z-50 flex text-center h-[60px] bg-white backdrop-blur-0"
>
    <div
        class="w-full max-w-[2000px] mx-auto px-5 flex items-center justify-between gap-5"
    >
        <a
            href="#home"
            class="text-black md:text-secondary text-4xl md:text-5xl tracking-tighter hover:text-accent transform hover:rotate-[44deg] transition-all duration-500 ease-out"
        >
            <Logo fill="currentColor" class="w-11 h-11 md:w-15 md:h-15" />
        </a>

        <div class="md:flex md:gap-7 md:ml-5 md:items-center hidden">
            {
                (
                    <a
                        href="#home"
                        class="text-secondary text-xl font-medium hover:text-[#e27952] transition-colors duration-500 ease"
                    >
                        Home
                    </a>
                )
            }
        </div>
        <div class="hidden md:block">
            <Button text="Kontakt" href="#contact" variant={"outlined"}/>
        </div>
    </div>
</div>
