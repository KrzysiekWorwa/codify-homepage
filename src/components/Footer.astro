---
import Logo from "../assets/icons/Codify-logo-ciemne.svg";
import type { NavData } from "../content/menuItems";
import { resolveHref } from "../lib/resolveHref";

const { nav } = Astro.props as { nav: NavData };

const homeHref = resolveHref(nav.homeHref ?? "#home");
---

<footer class="bg-dark pb-10 md:pb-15 flex flex-col">
    <div class="h-0.5 bg-secondary/40 mx-5 md:mx-20"></div>
    <div
        class="px-20 py-10 md:py-15 flex flex-col md:flex-row items-center justify-between gap-7"
    >
        <a
            href={homeHref}
            class="flex flex-col gap-1.5 items-center group text-secondary md:text-secondary hover:text-accent transform hover:rotate-44 transition-all duration-500 ease-out"
            aria-label="Go to home"
        >
            <Logo
                fill="currentColor"
                class="w-13 13 md:group-hover:translate-y-3 md:group-hover:scale-[1.3] transition-all duration-500"
            />
            <p
                class="leading-none md:block md:group-hover:opacity-0 md:group-hover:scale-95 transition-all duration-300"
            >
                CODIFY
            </p>
        </a>

        <div class="flex flex-col md:flex-row gap-3 md:gap-7 items-center">
            {
                nav.menu.map((item) => (
                    <a
                        href={item.href}
                        class="text-secondary text-xl font-medium hover:text-accent transition-colors duration-500 ease"
                    >
                        {item.label}
                    </a>
                ))
            }
            {
                nav.cta && (
                    <a
                        href={nav.cta.href}
                        class="text-secondary text-xl font-medium hover:text-accent transition-colors duration-500 ease"
                    >
                        {nav.cta.label}
                    </a>
                )
            }
        </div>

        <div class="text-secondary">
            <p>Loga fb itp</p>
        </div>
    </div>
    <div class="h-0.5 bg-secondary/40 mx-5 md:mx-20"></div>
    <div
        class="text-secondary flex flex-col md:flex-row gap-3 md:gap-7 items-center justify-center pt-3 md:pt-8"
    >
        <p>© 2026 Codify. All rights reserved.</p>
        <a
            class="hover:text-accent transition-colors duration-500 ease cursor-pointer"
            >Polityka prywatności</a
        >
        <a
            class="hover:text-accent transition-colors duration-500 ease cursor-pointer"
            >Polityka cookies</a
        >
    </div>
</footer>
